{
  "compilerOptions": {
    "declaration": false,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "ts",
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./",
  },
  "include": ["ts/"],
  "exclude": ["node_modules"]
}
